#!/bin/sh
BINARY={BINARY-"./duck_tongue"}
INSTALL_PATH=${INSTALL_PATH-"~/.local/bin"}
DEFAULT_MNESIA="$HOME/.config/DuckTongue/"
DUCK_MNESIA=${MNESIA-DEFAULT_MNESIA}
mix escript.build
mv ./duck_tongue $BINARY
mv $BINARY $INSTALL_PATH
chmod +x ./build_database
./build_database
mv "Mnesia*" $INSTALL_PATH